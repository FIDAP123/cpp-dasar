{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "g++ -std=c++23 ./*.cpp -o ./int_main.exe",
        },
        {
            "label": "run",
            "type": "shell",
            "dependsOn":["compile"],
            "command":["./*.exe"],
            "group":{
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}