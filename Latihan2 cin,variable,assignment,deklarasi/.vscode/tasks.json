{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C++",
            "type": "shell",
            "command": "g++",
            "args": 
            [
                ".\\*cpp",
                "-o",
                ".\\latihan2.exe"
            ]
        },
        {
            "label": "run",
            "type": "shell",
            "dependsOn":["Compile C++"],
            "command": ".\\latihan2.exe",
            "group": 
            {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}