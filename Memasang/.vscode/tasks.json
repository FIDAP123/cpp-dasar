    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C++",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=gnu++14",
                ".\\Memasang.cpp",
                "-o",
                ".\\Memasang.exe",
