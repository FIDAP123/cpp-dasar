    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "g++ -std=c++23 ./*.cpp -o ./latihan17.exe"
        },
        {
            "label": "run",
            "type": "shell",
            "dependsOn": "compile",
            "command": "./*.exe",
            "group":
            {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}